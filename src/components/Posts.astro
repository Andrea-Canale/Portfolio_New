---
import PostCard from "./PostCard.svelte";
let allPosts = await Astro.glob("../pages/posts/**");
---

{
  allPosts.map((post) => {
    const href = `/Portfolio_New/posts/${post.file.split("/").pop().split(".").shift()}`;
    return (
        <PostCard title={post.frontmatter.title} href={href} icon={"/Portfolio_New".concat(post.frontmatter.icon)}/>
    );
  })
}
